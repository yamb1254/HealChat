{
  "version": 2,
  "builds": [
    {
      "src": "HCBackend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "HealChat/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "HealChat/dist"  
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "HCBackend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/HealChat/dist/$1"  
    }
  ]
}
